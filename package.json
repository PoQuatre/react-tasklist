{
  "name": "react-tasklist",
  "version": "0.1.0",
  "repository": "https://github.com/PoQuatre/react-tasklist.git",
  "author": "PoQuatre <leflem.mateo2002@gmail.com>",
  "license": "MIT",
  "private": true,
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".commitizenrc.json"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:ci": "vite build --base=/react-tasklist/",
    "preview": "vite preview",
    "typecheck": "tsc",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,html,md,svg,yml}\"",
    "lint:eslint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:stylelint": "stylelint --aei \"src/**/*.css\"",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.css": "stylelint --cache --fix",
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,json,html,md,svg,yml,yaml}": "prettier --write"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/babel__core": "^7.1.19",
    "@types/node": "^17.0.22",
    "@types/react": "^17.0.42",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vitejs/plugin-react": "^1.2.0",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "postcss": "^8.4.12",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.6.0",
    "stylelint": "^14.6.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vite-plugin-compression": "^0.5.1",
    "vite-tsconfig-paths": "^3.4.1"
  }
}
