{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-idiomatic-order",
    "stylelint-prettier/recommended"
  ],
  "rules": {
    "declaration-empty-line-before": [
      "always",
      {
        "except": ["first-nested"],
        "ignore": [
          "after-comment",
          "after-declaration",
          "inside-single-line-block"
        ]
      }
    ]
  }
}
